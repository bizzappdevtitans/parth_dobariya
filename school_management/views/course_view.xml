<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">view.course.tree</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <tree >
                <field name="course_name"/>
                <field name="course_reference"  />
                <field name="course_description" />
                <field name="course_count"  />
            </tree>
        </field>
    </record>

    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.course.form</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" string='Course' name="action_view_course"  icon='fa-pencil-square-o'>
                            <field string="Course" name="course_count" widget="statinfo" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="course_name" />
                        </h1>
                    </div>
                    <group>
                        <field name="course_reference"  />
                        <field name="course_description" />
                        <field name="course_count"  />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_course_course" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">course.course</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        </field>
    </record>
</odoo>
